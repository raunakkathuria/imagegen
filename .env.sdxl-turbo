# Model Selection
MODEL_ID=stabilityai/sdxl-turbo
VARIANT=fp16

# Core Parameters
NUM_INFERENCE_STEPS=2      # SDXL-Turbo is optimized for 1-4 steps
GUIDANCE_SCALE=0.0         # Works best with 0 guidance scale
HEIGHT=512                 # Good for mobile optimization
WIDTH=512                  # Good for mobile optimization

# GPU Settings
USE_GPU=true
TORCH_DTYPE=float16       # Use float16 for better memory efficiency

# Memory Optimization - Minimal for speed
ENABLE_ATTENTION_SLICING=true
MAX_MEMORY=0.8

# Disable these for speed
ENABLE_MEMORY_EFFICIENT_ATTENTION=false
ENABLE_VAE_TILING=false
EMPTY_CACHE_BETWEEN_RUNS=false

# CPU only settings, enable if using CPU only
ENABLE_MODEL_CPU_OFFLOAD=false
ENABLE_SEQUENTIAL_CPU_OFFLOAD=false

# Resource Management
WORKERS=1
EMPTY_CACHE_BETWEEN_RUNS=true

# API Configuration
PORT=8080
HOST=0.0.0.0

# Default Prompt
PROMPT="Little astronaut Alex in her spacesuit boards a colorful spaceship, exploring distant stars and meeting friendly alien Zog, whimsical storybook illustration style, no text, no words, no captions."
NEGATIVE_PROMPT="blurry, low quality, distorted, deformed, ugly, bad anatomy, disfigured, poorly drawn, extra limbs, bad proportions, gross proportions, text, watermark"

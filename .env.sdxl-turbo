# Model Selection
MODEL_TYPE=stable-diffusion-xl
MODEL_ID=stabilityai/sdxl-turbo
MODEL_NAME=SDXL-Turbo
VARIANT=fp16

# Core Parameters
NUM_INFERENCE_STEPS=4      # SDXL-Turbo is optimized for 1-4 steps, 4 best quality
GUIDANCE_SCALE=0.0         # Works best with 0 guidance scale
HEIGHT=512                 # Good for mobile optimization
WIDTH=512                  # Good for mobile optimization

# GPU Optimization
USE_GPU=true
ENABLE_ATTENTION_SLICING=true
ENABLE_MEMORY_EFFICIENT_ATTENTION=true
ENABLE_VAE_TILING=true

# Memory optimizations
ENABLE_MODEL_CPU_OFFLOAD=true
ENABLE_SEQUENTIAL_CPU_OFFLOAD=true

# API Configuration
PORT=8080
HOST=0.0.0.0
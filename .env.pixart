# Model Selection
MODEL_TYPE=PixArt-alpha
MODEL_ID=PixArt-alpha/PixArt-LCM-XL-2-1024-MS
MODEL_NAME=PixArt-LCM

# Core Parameters
NUM_INFERENCE_STEPS=4       # Optimized for 4-8 steps
GUIDANCE_SCALE=1
HEIGHT=768                  # Mobile-optimized
WIDTH=768                   # Mobile-optimized

# GPU Optimization
USE_GPU=true
ENABLE_ATTENTION_SLICING=true
ENABLE_MEMORY_EFFICIENT_ATTENTION=true
ENABLE_VAE_TILING=true

# Memory optimizations
ENABLE_MODEL_CPU_OFFLOAD=true
ENABLE_SEQUENTIAL_CPU_OFFLOAD=true
TORCH_DTYPE=float16             # Use half precision

# Resource management
MAX_MEMORY=0.6
WORKERS=1

# Story Prompt
PROMPT="Little astronaut Alex in her spacesuit boards a colorful spaceship, exploring distant stars and meeting friendly alien Zog, whimsical storybook illustration style, no text, no words, no captions."

# API Configuration
PORT=8080
HOST=0.0.0.0
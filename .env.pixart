# Model Selection
MODEL_ID=PixArt-alpha/PixArt-LCM-XL-2-1024-MS  # LCM variant is much faster
# MODEL_ID=PixArt-alpha/PixArt-XL-2-1024-MS # for better quality
# no VARIANT required for Pix Art

# Core Parameters
NUM_INFERENCE_STEPS=4      # PixArt is efficient with fewer steps
GUIDANCE_SCALE=2.0         # Works best without guidance
HEIGHT=768                 # Mobile optimized
WIDTH=768                  # PixArt optimal resolution

# GPU Settings
USE_GPU=true
TORCH_DTYPE=float16       # PixArt requires float32 for stability, use float16 for lower memory utilization

# Memory Optimizations (choose ONE approach)
ENABLE_ATTENTION_SLICING=true
MAX_MEMORY=0.8            # PixArt can use more memory due to fp32

# Disable these for speed
ENABLE_MEMORY_EFFICIENT_ATTENTION=false
ENABLE_VAE_TILING=false
EMPTY_CACHE_BETWEEN_RUNS=false

# CPU only settings, enable if using CPU only
ENABLE_MODEL_CPU_OFFLOAD=false
ENABLE_SEQUENTIAL_CPU_OFFLOAD=false

# Resource Management
WORKERS=1
EMPTY_CACHE_BETWEEN_RUNS=true

# API Configuration
PORT=8080
HOST=0.0.0.0

# Default Prompt
PROMPT="Little astronaut Alex in her spacesuit boards a colorful spaceship, exploring distant stars and meeting friendly alien Zog, whimsical storybook illustration style, no text, no words, no captions."
NEGATIVE_PROMPT="blurry, low quality, distorted, deformed, ugly, bad anatomy, disfigured, poorly drawn, extra limbs, bad proportions, gross proportions, text, watermark"
